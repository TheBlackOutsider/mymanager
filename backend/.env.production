# Configuration Production
JWT_SECRET_KEY=your-super-secure-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15

# Base de donn√©es Production
DATABASE_URL=postgresql://hrlead_prod:secure_password@prod-db:5432/hrlead_prod
POSTGRES_DB=hrlead_prod
POSTGRES_USER=hrlead_prod
POSTGRES_PASSWORD=secure_production_password

# Redis Production
REDIS_URL=redis://prod-redis:6379

# Email Production
SMTP_SERVER=smtp.company.com
SMTP_PORT=587
SMTP_USERNAME=noreply@company.com
SMTP_PASSWORD=secure_email_password
FROM_EMAIL=noreply@company.com

# LDAP Production
LDAP_ENABLED=true
LDAP_SERVER=ldap://ldap.company.com
LDAP_PORT=389
LDAP_BASE_DN=dc=company,dc=com
LDAP_BIND_DN=cn=admin,dc=company,dc=com
LDAP_BIND_PASSWORD=secure_ldap_password

# CORS Production
CORS_ORIGINS=["https://hr.company.com", "https://app.company.com"]
CORS_CREDENTIALS=true
CORS_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_HEADERS=["*"]

# Logging Production
LOG_LEVEL=INFO
LOG_FILE=/var/log/hrlead/app.log

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Security
RATE_LIMIT_PER_MINUTE=100
MAX_REQUEST_SIZE=10485760
